{
  "compilerOptions": {
    "outDir": "build/",
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": ["src"],
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["jest", "enzyme", "enzyme-adapter-react-16", "styled-components"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.*"]
}
